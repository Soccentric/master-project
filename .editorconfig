# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{py,python}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

[*.bb]
indent_style = space
indent_size = 4

[*.bbappend]
indent_style = space
indent_size = 4

[*.bbclass]
indent_style = space
indent_size = 4
